{% extends 'base.html.twig' %}

{% block title%}Pays index{% endblock %}

{% block body %}
        <div class="min-h-screen flex items-center justify-center">

        <h1>Pays index</h1>

        <table class="">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>CodePays</th>
                    <th>Nbhabitant</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for pay in pays %}
                <tr>
                    <td>{{ pay.id }}</td>
                    <td>{{ pay.codePays }}</td>
                    <td>{{ pay.nbhabitant }}</td>
                    <td>
                        <a href="{{ path('pays_show', {'id': pay.id}) }}">show</a>
                        <a href="{{ path('pays_edit', {'id': pay.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('pays_new') }}">Create new</a>
{% endblock %}
