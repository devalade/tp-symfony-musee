{% extends 'base.html.twig' %}

{% block title %}Musees index{% endblock %}

{% block body %}
    <h1>Musees index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumMus</th>
                <th>NomMus</th>
                <th>Nblivres</th>
                <th>CodePays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for musee in musees %}
            <tr>
                <td>{{ musee.id }}</td>
